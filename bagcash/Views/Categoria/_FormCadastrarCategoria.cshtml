@model bagcash.Models.ViewModels.CategoriaViewModel

@{
    ViewData["Title"] = "_FormCadastrarCategoria";
}

<form asp-action="Cadastrar" id="form-cadastrar-categoria">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control"/>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div id="group-tipoDeCategoria" class="form-group">
        <label asp-for="TipoDeCategoria" class="control-label"></label>
        <select asp-for="TipoDeCategoria" asp-items="Html.GetEnumSelectList<Tipo>()" class="form-control">
            <option value="">...</option>
        </select>
        <span asp-validation-for="TipoDeCategoria" class="text-danger"></span>
    </div>
    <div id="group-limite" class="form-group">
        <label asp-for="Limite" class="control-label"></label>
        <input asp-for="Limite" class="form-control" value="0"/>
        <span asp-validation-for="Limite" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoriaPaiId" class="control-label"></label>
        <select asp-for="CategoriaPaiId" class="form-control">
        </select>
        <label class="control-label">- Opcional</label>
    </div>
    <div>
        <button class="btn btn-success" type="submit"><i class="fas fa-save"></i> Salvar</button>
        <a class="btn btn-outline-dark ml-2" asp-action="Index"><i class="fas fa-undo"></i> Cancelar</a>
    </div>
</form>

