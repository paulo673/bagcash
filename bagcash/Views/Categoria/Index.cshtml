@model IEnumerable<bagcash.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<h4>Categorias</h4>
<div class="row bg-success p-2 mb-3">
    <div class="col-md-12">
        <a asp-action="Cadastrar" class="btn btn-sm btn-light btn-sm mr-2">
            <i class="mr-1 fas fa-plus"></i> Cadastrar
        </a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Limite)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Limite)
                </td>
            </tr>
        }
    </tbody>
</table>
