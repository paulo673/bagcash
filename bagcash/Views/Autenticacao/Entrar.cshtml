@model bagcash.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<h4>Login</h4>

<div class="row">
    <div class="col-md-4">
        <hr />
        <form asp-action="Entrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class=""></i> Entrar
                </button>
            </div>
        </form>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            Não possui uma conta? <a asp-action="Cadastrar" asp-controller="Usuario" class="control-label">Criar conta</a>
        </div>
    </div>
</div>