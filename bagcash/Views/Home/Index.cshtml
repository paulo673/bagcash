@model bagcash.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="card-deck">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Total de receitas</h5>
            <p class="card-text badge badge-info">R$ @Model.TotalDeReceitas</p>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Total de despesas</h5>
            <p class="card-text badge badge-warning">R$ @Model.TotalDeDespesas</p>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Saldo</h5>
            <p class="card-text badge badge-success">R$ @Model.Saldo</p>
        </div>
    </div>
</div>
