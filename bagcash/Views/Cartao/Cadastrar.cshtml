@model bagcash.Models.ViewModels.CartaoViewModel

@{
    ViewData["Title"] = "Cadastrar";
}

<h4>Cadastrar cartão</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Cadastrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Limite" class="control-label"></label>
                <input type="number" asp-for="Limite" class="form-control" />
                <span asp-validation-for="Limite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaDeFechamento" class="control-label"></label>
                <input type="number" asp-for="DiaDeFechamento" class="form-control" />
                <span asp-validation-for="DiaDeFechamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaDeVencimento" class="control-label"></label>
                <input type="number" asp-for="DiaDeVencimento" class="form-control" />
                <span asp-validation-for="DiaDeVencimento" class="text-danger"></span>
            </div>
            <div>
                <button class="btn btn-success" type="submit"><i class="fas fa-save"></i> Salvar</button>
                <a class="btn btn-outline-dark ml-2" asp-action="Index"><i class="fas fa-undo"></i> Cancelar</a>
            </div>
        </form>
    </div>
</div>
